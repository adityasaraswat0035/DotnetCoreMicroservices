@model IEnumerable<ProductDto>
<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Create" class="btn btn-outline-primary"><i>Create New Product</i></a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Product in Model)
            {
                <tr>
                    <td>
                        @Product.Name
                    </td>
                    <td>
                        @Product.Category.Name
                    </td>
                    <td>
                        @Product.Price.ToString("C")
                    </td>
                    <td>
                        <a asp-action="EditProduct" class="btn btn-success" asp-route-productId="@Product.Id"><i class="class=" glyphicon glyphicon-edit">Edit</i></a>
                        <a asp-action="DeleteProduct" class="btn btn-danger" asp-route-productId="@Product.Id"><i class="class=" glyphicon glyphicon-trash">Delete</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>